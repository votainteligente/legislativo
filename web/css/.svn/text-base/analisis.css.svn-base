@charset "UTF-8";
/* ANALISIS LEGISLATIVO */


#sessiones{
background-color:#F3F3F3;
width: 700px;
height: auto;
overflow-x: scroll;
overflow-y: hidden;
padding: 10px 0px;
border: 2px solid #d4d4d4;
border-collapse: collapse;
border-spacing: 0px;
}
.border-naranjo{
width:700px;
background-color: #f79420;
}

/*_________________ TABLA SESIONES_________________*/

.tb_sessiones{
width: 320px;
}
.tb_sessiones thead{ 
background-color:#F7931E;
height: 30 px;
color:#FFFFFF;
font-family: Arial;
font-variant: small-caps;
font-size:10pt;
letter-spacing:1pt;
padding: 5px;
display: block;
height:18px;
}  /* este es el header de las tablas, donde va el titulo */

tr.odd, tr.even{
font-family: georgia;
}
 
.tb_sessiones tr.odd{
background-color:#d4d4d4;
}

.tb_sessiones tr.even{
background-color:#f3f3f3;
}

.tb_sessiones td{
height: 20px;
font-family: georgia;
color: #bcbcbc;

}

.tb_sessiones img{
padding-right: 5px;
padding:3px 10px 3px 3px;
float: left;
}
.tb_sessiones a{
text-decoration: none; !important
}
.tb_sessiones a:hover{
text-decoration: underline; !important
}


.session, .session_ex{
float: left;
display: block;
 border: 1px solid #d4d4d4;
 margin: 0px 7px;
 height: 300px;
 background-color:#FFFFFF;
 }
 
  .session_ex{
 border: 1px solid #aaaaaa;
 }
 .session{
 border: 2px solid #F7931E;
 }
 
  .session tr.odd{
  background-color:#d4d4d4;
 }
 
 .session_ex .tb_sessiones thead{ 
 background-color: #aaaaaa;
 height:18px;
 
 }

.scrollContent {
  display:block;
  width:100%;
}

.scrollContent img{


}
div.sessiones_body{
overflow-y: scroll;
overflow-x: hidden;
height:272px;
}

 /*_________________ TABLA SESIONES_________________*/

class Sesion extends BaseSesion
{
  public function __toString()
  {
    return $this->getNro()." (".$this->getCamara().")";
  }
  
  public function getDebatesDestacados()
  {
    $q = Doctrine_Query::create()
      ->select('d.*')
      ->from('Debate d')
      ->where('d.destacado_titulo IS NOT NULL AND d.destacado_texto IS NOT NULL')
      ->orderBy('d.fecha DESC')
      ->limit(3);

    return $q->execute();
  }
}
